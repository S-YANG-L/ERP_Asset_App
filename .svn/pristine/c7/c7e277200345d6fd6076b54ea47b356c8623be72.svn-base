<!--消息-->
<ion-view cache-view="true" view-title="已办业务">

  <!--数据区域-->
  <ion-content style="margin-top: -43px">
    <div class="item item-input-inset">
      <label class="item-input-wrapper">
        <i class="asset-icon-search" style="color: #AAAAAA;"></i>
        <input type="search" placeholder="请输入关键字" ng-model="searchContent" ng-change="goSearchContent()">
      </label>
    </div>
    <!--咖啡-->
    <div style="text-align: center;padding-top: 25%;color: rgb(173,173,173)" ng-if="isCheck==true">
      <div class="asset-icon-coffee_1" style="font-size: 50px"></div>
      <span>暂无已办业务~~~</span>
    </div>
    <!--<ion-scroll direction="y" style="position: absolute;top: 50px!important;bottom: 0;left: 0;right: 0;">-->
    <!--下拉刷新-->
    <ion-refresher pulling-text="下拉刷新" on-refresh="doRefresh(true)" pulling-icon="rrs-icon-pull-down"></ion-refresher>
    <!--数据列表-->
    <ion-list class="has-tabs-top">
      <div ng-repeat="doneItem in doneList | filter:searchContent" class=""
           ng-click="goApprovalDetail(doneItem.bizKey,doneItem.billtypeCode,doneItem)">

        <div class="row row-no-padding font-small padding-horizontal no-margin">
          <div class="col-center font-xsmall" style="width: 40px;">
            <div
              style="padding-left:4px;padding-top:7px;color: #fff;width: 32px; height: 32px;-moz-border-radius: 16px;-webkit-border-radius: 16px;border-radius: 16px;
              background-color:{{
                doneItem.billtypeCode =='WZCK'?'#FF8F29':(
                doneItem.billtypeCode =='ZCLY'?'#36AD69':(
                doneItem.billtypeCode =='ZCTK'?'#cfcfcf':(
                doneItem.billtypeCode =='ZCDB'?'#ff0000':'#FF8F29')))}}">
              {{doneItem.billtypeCode
              =='WZCK'?'领用':(doneItem.billtypeCode
              =='ZCLY'?'领用':(doneItem.billtypeCode
              =='ZCTK'?'退库':(doneItem.billtypeCode
              =='ZCDB'?'调拨':'报销')))}}
            </div>
          </div>
          <div style="width: 88%" class="font-small">
            <div class="row row-no-padding">
              <div class="col col-30">{{doneItem.applicantName}}</div>
              <div class="col text-right" style="color: #AAAAAA;">{{doneItem.billDate}}</div>
            </div>
            <div class="row row-no-padding" style="color: #FE943E;">{{doneItem.content}}</div>
          </div>

        </div>
        <div class="line"></div>
      </div>
    </ion-list>

    <!--上拉加载-->
    <ion-infinite-scroll ng-if="hasMore" on-infinite="doLoadMore()" distance="1%"></ion-infinite-scroll>
    <!--</ion-scroll>-->
  </ion-content>
</ion-view>
