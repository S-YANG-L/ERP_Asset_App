<ion-view view-title="选择公司" cache-view="false">
  <ion-nav-bar class="bar-erp-blue" align-title="center">
  <ion-nav-buttons side="left">
    <button class="button button-clear button-light icon-small erp-icon-back"
            style="font-size: 25px;color: white;width: 50px;padding-right: 30px" ng-click="goBack()"></button>
  </ion-nav-buttons>
  </ion-nav-bar>
  <ion-content class="no-padding" overflow-scroll="true">
    <ion-refresher pulling-text="下拉刷新" on-refresh="doRefresh()" pulling-icon="rrs-icon-pull-down"></ion-refresher>
    <div class="item item-input-inset">
      <label class="item-input-wrapper">
        <i class="asset-icon-search" style="color: #AAAAAA;"></i>
        <input type="search" placeholder="请输入公司" ng-model="searchContent">
      </label>
    </div>
    <ion-list>
      <div style="padding-left: 15px;">
        <div class="row row-no-padding no-margin" style="line-height: 30px;vertical-align: middle;"
             ng-repeat="item in companyList | filter:searchContent" ng-click="companyBill(item)">
          <div class="col" style="border-bottom: solid 1px #eeeeee;">
            <div class="padding-top">{{item.name}}</div>
          </div>
        </div>
      </div>
    </ion-list>

  </ion-content>
</ion-view>
